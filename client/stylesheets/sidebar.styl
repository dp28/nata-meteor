@import 'colours.import'

#sidebar
  background-color: colours.grey.light
  padding: 0
  height: 100%
  box-shadow: 0px 0px 3px 0px colours.shadow
  z-index: 1000

  a:hover
    background-color: colours.grey.medium

  .settings
    padding: 10px 15px
    .heading
      font-weight: bold

    label
      font-weight: normal

@media screen and (max-width: 767px)
  .row-offcanvas
    -webkit-transition: all 0.25s ease-out
    -moz-transition: all 0.25s ease-out
    transition: all 0.25s ease-out

  .row-offcanvas-left
  .sidebar-offcanvas
    left: -41.6%

  .row-offcanvas-left.active
    position: relative
    left: 41.6%

  .sidebar-offcanvas
    position: absolute
    top: 0
    width: 41.6%
