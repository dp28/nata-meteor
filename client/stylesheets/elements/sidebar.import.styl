#sidebar
  background-color: colours.grey.light
  padding: 0
  height: 100%
  box-shadow: 0px 0px 3px 0px colours.shadow
  z-index: 1000

  a:hover
    background-color: colours.grey.medium

  .heading
    padding: 10px 15px
    font-weight: bold
    font-size: 1.2em
    color: colours.primary.dark
    width: 100%

  .settings
    padding: 0 15px
    border-top: 1px solid colours.primary.base

    .heading
      padding: 10px 0

    button
      float: left
      margin-right: 5px

    label
      font-weight: normal

@media screen and (max-width: 767px)
  .row-offcanvas
    -webkit-transition: all 0.25s ease-out
    -moz-transition: all 0.25s ease-out
    transition: all 0.25s ease-out

  .row-offcanvas-left
  .sidebar-offcanvas
    left: -41.6%

  .row-offcanvas-left.active
    position: relative
    left: 41.6%

  .sidebar-offcanvas
    position: absolute
    top: 0
    width: 41.6%
