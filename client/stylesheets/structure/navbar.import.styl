#navbar
  background-color: colours.primary.base
  color: colours.text
  border: none
  max-height: sizes.navbar-height
  box-shadow: 0px 0px 2px colours.shadow
  z-index: 1000

  #sidebar-toggle
    width: sizes.navbar-height
    height: sizes.navbar-height
    border: none
    outline: none
    padding: 0
    background-color: colours.primary.base

    .bar
      transition: s('transform %s' % sidebar-transition-time)
      background-color: colours.text
      width: 50%
      height: 2px
      border-radius: 1px
      margin: 6px auto

    .sidebar-open & .bar
      &.top
        transform: translateY(8px)rotate(225deg)

      &.middle
        transform: scale(0)

      &.bottom
        transform: translateY(-8px)rotate(135deg)

    +above(mobile)
      display: none

  .login-nav
    position: relative
    float: right
    padding: 9px 10px
    margin-top: 8px
    margin-right: 15px
    margin-bottom: 8px

    #login-dropdown-list
      left: auto
      right: 0

    #login-buttons
      .login-close-text
        float: right

      .login-link-text
        text-decoration: none
        color: colours.text

        &:hover
          color: colours.grey.light

#navbar-shadow
  width: 100%
  height: sizes.navbar-height
  z-index: 500
  top: 0px
  position: fixed
  box-shadow: 0px 0px 5px colours.shadow

#logo
  align(vertical)
  color: colours.text
  float: left
  margin-left: 10px
  font-size: 1.7em
  letter-spacing: -1px
  font-weight: bold
  line-height: 1

  &:hover
  &:focus
    text-decoration: none