#navbar
  #sidebar-toggle
    background-color: blue
    width: sizes.navbar-height
    height: sizes.navbar-height
    border: none
    outline: none
    padding: 0

    .bar
      transition: s('transform %s' % sidebar-transition-time)
      width: 50%
      height: 2px
      border-radius: 1px
      background-color: white
      margin: 6px auto

    .sidebar-open & .bar
      &.top
        transform: translateY(8px)rotate(225deg)

      &.middle
        transform: scale(0)

      &.bottom
        transform: translateY(-8px)rotate(135deg)

    +above(mobile)
      display: none

.navbar-shadow
  width: 100%
  height: sizes.navbar-height
  z-index: 500
  top: 0px
  position: fixed
  box-shadow: 0px 0px 5px colours.shadow

.navbar
  background-color: colours.primary.base
  color: colours.text
  border: none
  max-height: sizes.navbar-height
  box-shadow: 0px 0px 2px colours.shadow

  .navbar-header
    width: 100%

  .navbar-brand
    color: colours.text

  .navbar-toggle
    float: left
    margin-left: 10px
    border: none
    background-color: colours.primary.base

    .icon-bar
      background-color: colours.text

    &:hover
      background-color: colours.primary.base

  .login-nav
    position: relative
    float: right
    padding: 9px 10px
    margin-top: 8px
    margin-right: 15px
    margin-bottom: 8px

    #login-dropdown-list
      left: auto
      right: 0

    #login-buttons
      .login-close-text
        float: right

      a
        text-decoration: none
        color: colours.text

        &:hover
          color: #5e5e5e