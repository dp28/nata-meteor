#sidebar
  background-color: colours.grey.light
  padding: 0
  height: 100%
  box-shadow: 0px 0px 3px 0px colours.shadow
  z-index: 750

  a:hover
    background-color: colours.grey.medium

  .heading
    padding: 10px 15px
    font-weight: bold
    font-size: 1.2em
    color: colours.primary.dark
    width: 100%

  .settings
    padding: 0 15px
    border-top: 1px solid colours.primary.base

    .heading
      padding: 10px 0

    button
      float: left
      margin-right: 5px

    label
      font-weight: normal


  .login-nav
    position: relative
    float: right
    padding: 9px 10px
    margin-top: 8px
    margin-right: 15px
    margin-bottom: 8px

    #login-dropdown-list
      left: auto
      right: 0

    #login-buttons
      .login-close-text
        float: right

      a
        text-decoration: none
        color: colours.text

        &:hover
          color: #5e5e5e