@import 'colours.import'

.navbar
  background-color: primary.base
  color: text

  .navbar-header
    width: 100%

  .navbar-brand
    color: text

  .navbar-toggle
    float: left
    margin-left: 10px
    border: none
    background-color: primary.base

    .icon-bar
      background-color: text

    &:hover
      background-color: primary.base

  .login-nav
    position: relative
    float: right
    padding: 9px 10px
    margin-top: 8px
    margin-right: 15px
    margin-bottom: 8px

    #login-dropdown-list
      left: auto
      right: 0

    #login-buttons
      .login-close-text
        float: right

      a
        text-decoration: none
        color: text

        &:hover
          color: #5e5e5e